# Azure AI Foundry Configuration
AZURE_AI_PROJECT_CONNECTION_STRING=
AZURE_AI_PROJECT_ID=
AZURE_RESOURCE_GROUP=
AZURE_SUBSCRIPTION_ID=

# Azure OpenAI / Claude Configuration
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=claude-3-5-sonnet
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Alternative: Direct Anthropic API (if not using Azure)
ANTHROPIC_API_KEY=

# MSSQL Database Configuration
MSSQL_SERVER=localhost
MSSQL_PORT=1433
MSSQL_DATABASE=financial_insights_db
MSSQL_USERNAME=sa
MSSQL_PASSWORD=
MSSQL_DRIVER=ODBC Driver 18 for SQL Server
MSSQL_TRUST_SERVER_CERTIFICATE=yes

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080
MCP_SERVER_PROTOCOL=http

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
API_LOG_LEVEL=info

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Azure Key Vault (Optional)
AZURE_KEY_VAULT_NAME=
AZURE_KEY_VAULT_URL=

# Agent Configuration
SQL_AGENT_MODEL=claude-3-5-sonnet
SQL_AGENT_TEMPERATURE=0.1
SQL_AGENT_MAX_TOKENS=2048

ANALYST_AGENT_MODEL=claude-3-5-sonnet
ANALYST_AGENT_TEMPERATURE=0.3
ANALYST_AGENT_MAX_TOKENS=4096

EXPERT_AGENT_MODEL=claude-3-5-sonnet
EXPERT_AGENT_TEMPERATURE=0.5
EXPERT_AGENT_MAX_TOKENS=4096

# Code Interpreter Configuration
CODE_INTERPRETER_TIMEOUT=300
CODE_INTERPRETER_MAX_MEMORY_MB=2048

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Observability
ENABLE_TELEMETRY=false
OTEL_EXPORTER_OTLP_ENDPOINT=
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Development
ENVIRONMENT=development
DEBUG=true
